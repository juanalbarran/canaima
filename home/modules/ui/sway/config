# home/modules/sway/config

input "type:keyboard" {
    xkb_layout "us"
    xkb_options "altwin:swap_alt_win"
}

include ~/.config/sway/variables.conf
include ~/.config/sway/autostart.conf
include ~/.config/sway/monitors.conf
include ~/.config/sway/rules.conf
include /etc/sway/config-vars.d/*

output eDP-1 scale 1.2

include ~/.config/sway/bindings.conf
include ~/.config/sway/bindings/browser-binds.conf
include ~/.config/sway/bindings/ai-binds.conf
include ~/.config/sway/bindings/firefox-binds.conf
include ~/.config/sway/bindings/screenshot-binds.conf

# sounds - pulseaudio
#
exec pulseaudio --daemonize

# Brightness control
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

# Volume control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

default_border none

# Command to start apps by default
#exec_always ~/.config/sway/start_apps.sh

include /etc/sway/config.d/*

